---
layout: base.njk
eleventyComputed:
  head: |
    <link rel="stylesheet" href="/posts/article.css">{{"\n"-}}
    <link rel="stylesheet" href="https://unpkg.com/prismjs@1.20.0/themes/prism-okaidia.css"/>
    {% if head %}{{ head | safe }}{% endif %}
---

<article>
  <header>
    <h1>
      <span class="title">{{ title }}</span>
      {%- if subtitle -%}
        {{- "\n" | indent(6) -}}
        <span class="subtitle">{{ subtitle }}</span>
      {%- endif %}
    </h1>
    <time>{{ publishDate | formatDate("yyyy-MM-dd") }}</time>
  </header>

  {{"\n"}}{{- content | indentHtml | safe }}
</article>
